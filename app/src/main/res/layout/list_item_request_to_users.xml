<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/distance"
    android:layout_marginRight="@dimen/distance"
    android:layout_marginBottom="@dimen/distance"
    android:layout_marginStart="@dimen/distance"
    android:layout_marginLeft="@dimen/distance"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_requested_to_user_name"
        android:text="asdgg"
        android:layout_gravity="center"
        android:textSize="@dimen/nav_drawer_user_name_text_size"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_margin="@dimen/small_distance"
            android:layout_width="@dimen/list_photo_size"
            android:layout_height="@dimen/list_photo_size"
            android:id="@+id/iv_requested_to_user_photo"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_margin="@dimen/small_distance"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/baseline_delete_black_48"
            android:id="@+id/iv_requested_to_user_delete"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/action_background"/>

    </LinearLayout>

    <TextView
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asgaqf23"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_requested_to_user_type"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

</LinearLayout>