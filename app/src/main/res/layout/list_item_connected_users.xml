<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/distance"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_connected_user_name"
        android:layout_gravity="center"
        android:textSize="@dimen/nav_drawer_user_name_text_size"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textStyle="bold|italic"/>

    <ImageView
        android:layout_margin="@dimen/small_distance"
        android:layout_width="@dimen/list_photo_size"
        android:layout_height="@dimen/list_photo_size"
        android:id="@+id/iv_connected_user_photo"
        android:layout_gravity="center"
        android:contentDescription="@string/connected_users_photo_content_description"/>

    <TextView
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_connected_user_type"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

</LinearLayout>