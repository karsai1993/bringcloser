<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerInside"
        android:layout_margin="@dimen/small_distance"
        android:id="@+id/iv_chat_photo_big"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_control_panel_icon_size"
            android:layout_weight="1"
            android:id="@+id/iv_chat_photo_download"
            android:src="@drawable/baseline_get_app_black_48"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_control_panel_icon_size"
            android:layout_weight="1"
            android:id="@+id/iv_chat_photo_share"
            android:src="@drawable/baseline_share_black_48"
            android:layout_gravity="center"/>

        <TextView
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:id="@+id/tv_chat_photo_date_and_time"
            android:text="2018 jun 8 22:13"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>