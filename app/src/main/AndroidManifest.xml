<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="karsai.laszlo.bringcloser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".BringCloserApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.screens.welcome.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.screens.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.screens.settings.SettingsActivity"
            android:label="@string/settings_activity"
            android:parentActivityName=".ui.screens.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.screens.main.MainActivity" />
        </activity>
        <activity
            android:name=".ui.screens.addnewconnection.AddNewConnectionActivity"
            android:label="@string/add_new_connection_activity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.screens.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.screens.main.MainActivity" />
        </activity>
        <activity
            android:name=".ui.screens.addchosenconnection.AddChosenConnectionActivity"
            android:label="@string/add_chosen_connection_activity"
            android:parentActivityName=".ui.screens.addnewconnection.AddNewConnectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.screens.addnewconnection.AddNewConnectionActivity" />
        </activity>

        <service android:name=".service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:exported="false"
            android:name=".service.UpdateStateService">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ui.screens.connection.ConnectionActivity"
            android:theme="@style/ConnectionActivityTheme"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".ui.screens.addnewwishactivity.AddNewWishActivity"
            android:label="@string/wish_label"
            android:parentActivityName=".ui.screens.connection.ConnectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.screens.connection.ConnectionActivity" />
        </activity>
        <activity android:name=".ui.screens.addneweventactivity.AddNewEventActivity"
            android:label="@string/event_label"
            android:parentActivityName=".ui.screens.connection.ConnectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.screens.connection.ConnectionActivity" />
        </activity>
    </application>

</manifest>